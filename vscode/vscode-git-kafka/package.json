{
  "name": "vscode-git-kafka",
  "displayName": "vscode-git-kafka",
  "description": "Visual Studio Code extension to invoke git commands and scale with kafka",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-git-kafka.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vscode-git-kafka.gitGrep",
        "title": "git grep"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "myExtensionContainer",
          "title": "Git Kafka",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "myExtensionContainer": [
        {
          "type": "webview",
          "id": "myExtension.DirsPaths",
          "name": "Dirs Paths"
        },
        {
          "type": "webview",
          "id": "myExtension.myWebview",
          "name": "Git grep"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "VSCode Git Kafka Configuration",
      "properties": {
        "vscode-git-kafka.includeDirs": {
          "type": "string",
          "default": "",
          "description": "Include Dirs"
        },
        "vscode-git-kafka.excludeDirs": {
          "type": "string",
          "default": "",
          "description": "Exclude Dirs"
        },
        "vscode-git-kafka.pathSpec": {
          "type": "string",
          "default": "",
          "description": "PathSpec"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@vscode/vsce": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "vsce": "^2.15.0"
  }
}
